<div class="form-gruop row my-3 mx-auto justify-content-center">
  <form action="./category" class="form-inline col-12 row justify-content-center">
    <label for="category"></label>
    <select class="custom-select form-control mr-3 col-3 col-lg-2" name="category" id="category">
      <option value="全部">全部</option>
      <option value="家居物業">家居物業</option>
      <option value="交通出行">交通出行</option>
      <option value="休閒娛樂">休閒娛樂</option>
      <option value="餐飲食品">餐飲食品</option>
      <option value="其他">其他</option>
    </select>
    <div>
      <button class="btn btn-primary col-auto" style="display: inline;" type="submit">搜尋</button>
    </div>
  </form>
</div>

<div class="row mx-auto justify-content-center my-3">
  <div col-6 d-flex flex-row justify-content-center>
    <div class="mr-3">總金額：</div>
    <h1 style="color: #FF9224">{{ totalAmount }}</h1>
  </div>
</div>



<ul class="list-group">
  {{#each expenses }}
  <li class="list-group-item">
    <div class="row">
      <div class="col-7 row align-items-center ml-1 d-flex flex-nowrap">
        <div class="col-3 col-lg-1 text-right" style="font-size: 30px; color: #66d4d">
          <i class="{{this.icon}}"></i>
        </div>
        <div class="col-6 col-lg-8 d-flex flex-column">
          {{this.name}}
          <small>{{this.date}}</small>
        </div>
        <div class="col-auto align-items-center">
          {{this.amount}}
        </div>
      </div>
      <div class="col-5 text-right align-self-center">
        <a class="btn btn-success mr-2" href="./expenses/{{ this._id }}/edit">修改</a>
        <form action="./expenses/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
          <button class="btn btn-danger mr-2" type="submit" onclick="return del()">刪除</button>
        </form>
      </div>
    </div>
  </li>
  {{/each}}
</ul>

<div class="my-5 text-center">
  <a class="btn btn-lg btn-warning" style="width: 300px;" href="./expenses/new">新增支出</a>
</div>
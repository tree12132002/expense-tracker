<div>
  <form action="./expenses/category">
    <div class="form-gr">
      <label for="category"></label>
      <select class="form-control" name="category" id="category">
        <option value="全部">全部</option>
        <option value="家居物業">家居物業</option>
        <option value="交通出行">交通出行</option>
        <option value="休閒娛樂">休閒娛樂</option>
        <option value="餐飲食品">餐飲食品</option>
        <option value="其他">其他</option>
      </select>
    </div>
    <div>
      <button type="submit">搜尋</button>
    </div>
  </form>
</div>

<div>
  <h2>總金額：</h2>
  <h1>{{ totalAmount }}元</h1>
</div>


<ul class="list-group">
  {{#each expenses }}
  <li class="list-group-item d-flex justify-content-between align-items-center">
    <div class="row">
      <div class="col">
        <i class="{{this.icon}}"></i>
      </div>
      <div class="col">
        {{this.name}}
        <small>{{this.date}}</small>
      </div>
      <div class="col">
        {{this.amount}}
      </div>
      <div class="col">
        {{this.category}}
      </div>
      <div>
        <a href="./expenses/{{ this._id }}/edit">修改</a>
      </div>
      <div>
        <form action="./expenses/{{ this._id }}/delete" method="POST" style="display: inline;">
          <button class="btn btn-secondary" type="submit">刪除</button>
        </form>
      </div>
    </div>
  </li>
  {{/each}}
</ul>

<div>
  <a class="btn btn-primary justify-content-center d-flex" href="./expenses/new">新增支出</a>
</div>
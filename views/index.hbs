<div>
  <form action="">
    <div class="form-gr">
      <label for="category-select"></label>
      <select class="form-control" name="category-select" id="category-select">
        <option value="家居物業">家居物業</option>
        <option value="交通出行">交通出行</option>
        <option value="休閒娛樂">休閒娛樂</option>
        <option value="餐飲食品">餐飲食品</option>
        <option value="其他">其他</option>
      </select>
    </div>
  </form>
</div>



<ul class="list-group">
  {{#each expenses }}
  <li class="list-group-item">
    <div class="row">
      <div>
        <i class="{{this.icon}}"></i>
      </div>
      <div>
        <div>
          {{this.name}}
        </div>
        <div>
          {{this.date}}
        </div>
        <div>
          {{this.amount}}
        </div>
        <div>
          {{this.category}}
        </div>
      </div>
    </div>
  </li>
  {{/each}}
</ul>
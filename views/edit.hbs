<div class="container col-8">
  <div class="mt-4">
    <small class="text-start mt-2 mr-5">*必填欄位</small>
  </div>
  <div>
    <p class="text-center mx-auto">請修改你的支出</p>
  </div>
  <form action="/expenses/{{ expense._id }}?_method=PUT" method="POST">
    <div class="input-group flex-nowrap mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="addon-wrapping">名稱*</span>
      </div>
      <input type="text" class="form-control" placeholder="" aria-label="name" aria-describedby="addon-wrapping"
        value="{{ expense.name }}" name="name" required>
    </div>

    <div class="input-group flex-nowrap mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="addon-wrapping">日期*</span>
      </div>
      <input type="date" class="form-control" placeholder="" aria-label="date" aria-describedby="addon-wrapping"
        value="{{ expense.date }}" name="date" required>
    </div>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <label class="input-group-text" for="inputGroupSelect01">類別*</label>
      </div>
      <select class="custom-select" id="inputGroupSelect01" name="category" required>
        <option value="" disabled selected hidden>Select</option>
        <option value="餐飲食品" {{#ifeq expense.categoryId.name "餐飲食品" }}selected{{/ifeq}}>餐飲食品</option>
        <option value="交通出行" {{#ifeq expense.categoryId.name "交通出行" }}selected{{/ifeq}}>交通出行</option>
        <option value="休閒娛樂" {{#ifeq expense.categoryId.name "休閒娛樂" }}selected{{/ifeq}}>休閒娛樂</option>
        <option value="家居物業" {{#ifeq expense.categoryId.name "家居物業" }}selected{{/ifeq}}>家居物業</option>
        <option value="其他" {{#ifeq expense.categoryId.name "其他" }}selected{{/ifeq}}>其他</option>
      </select>
    </div>

    <div class="input-group flex-nowrap">
      <div class="input-group-prepend">
        <span class="input-group-text" id="addon-wrapping">金額*</span>
      </div>
      <input type="text" class="form-control" placeholder="" aria-label="amount" aria-describedby="addon-wrapping"
        value="{{ expense.amount }}" name="amount" required>
    </div>

    <div class="text-center">
      <button class="btn btn-warning mt-4" style="width: 300px;" type="submit">送出</button>
    </div>
  </form>

</div>